{
  "title": "Auth Service - Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "HTTP Requests (total)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 },
      "targets": [
        { "expr": "sum(increase(http_requests_total[5m]))", "legendFormat": "requests" }
      ]
    },
    {
      "type": "stat",
      "title": "HTTP Errors (4xx/5xx)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 6 },
      "targets": [
        { "expr": "sum(increase(http_requests_total{status=~\"4..|5..\"}[5m]))", "legendFormat": "errors" }
      ]
    },
    {
      "type": "graph",
      "title": "Request duration p95 (s)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
          "legendFormat": "{{route}}"
        }
      ],
      "lines": true
    },
    {
      "type": "graph",
      "title": "Tokens issued / revoked (rate)",
      "gridPos": { "x": 0, "y": 14, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(auth_tokens_issued_total[5m])) by (type)", "legendFormat": "issued {{type}}" },
        { "expr": "sum(rate(auth_tokens_revoked_total[5m])) by (type)", "legendFormat": "revoked {{type}}" }
      ],
      "lines": true
    }
  ]
}
